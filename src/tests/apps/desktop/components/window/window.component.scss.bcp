$window-animation-duration: 150ms;
$window-resize-size: 6px;
$window-header-height: 30px;
$window-header-background-color: black;
$window-buttons-width: 150px;
$window-buttons-color: white;
$window-buttons-background-color: black;
$window-buttons-background-color-hover: lighten($window-buttons-background-color, 20%);
$window-buttons-close-background-color-hover: red;
$window-buttons-icon-size: 25%;

@mixin has-nth-children($count, $selector: '*') {
  & > #{$selector}:first-child:nth-last-child(#{$count}),
  & > #{$selector}:first-child:nth-last-child(#{$count}) ~ #{$selector} {
    @content;
  }
}

:host {
  display: block;
  position: absolute;
  left: 10%;
  right: 10%;

  & > * {
    position: absolute;
  }

  & > .resize-container {
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

    & > .resize {
      position: absolute;
      user-select: none;

      &.left,
      &.right {
        width: $window-resize-size;

        &.center {
          top: 0;
          bottom: 0;
        }
      }

      &.top,
      &.bottom {
        height: $window-resize-size;
        // background: green;

        &.center {
          left: 0;
          right: 0;
        }
      }

      &.left {
        left: -$window-resize-size;

        &.top {
          cursor: nw-resize;
        }

        &.center {
          cursor: w-resize;
        }

        &.bottom {
          cursor: sw-resize;
        }
      }

      &.right {
        right: -$window-resize-size;

        &.top {
          cursor: ne-resize;
        }

        &.center {
          cursor: e-resize;
        }

        &.bottom {
          cursor: se-resize;
        }
      }


      &.top {
        top: -$window-resize-size;

        &.center {
          cursor: n-resize;
        }
      }

      &.bottom {
        bottom: -$window-resize-size;

        &.center {
          cursor: s-resize;
        }
      }

    }
  }

  & > .frame {
    width: 100%;
    height: 100%;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #eeeeee;
    box-shadow: 0 0 $window-resize-size 0 rgba(black, 0.2);

    & > * {
      position: absolute;
      left: 0;
      right: 0;
    }

    & > .header {
      top: 0;
      height: $window-header-height;
      background-color: $window-header-background-color;

      & > * {
        position: absolute;
        top: 0;
        bottom: 0;
      }

      & > .tabs {
        left: 0;
        right: $window-buttons-width;
      }

      & > .window-buttons {
        right: 0;
        width: $window-buttons-width;
        font-size: 0;
        //white-space: nowrap;
        //text-align: right;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: stretch;
        align-content: stretch;

        & > * {
          position: relative;
          align-self: stretch;
          flex-grow: 1;
          height: 100%;
          background-color: $window-buttons-background-color;
          cursor: default;
          transition: background-color $window-animation-duration;

          &:hover {
            background-color: $window-buttons-background-color-hover;
          }
        }

        & > .minimize-button {
          &::before {
            content: '';
            width: $window-buttons-icon-size;
            height: 1px;
            position: absolute;
            left: (100% - $window-buttons-icon-size) / 2;
            top: 50%;
            background-color: $window-buttons-color;
          }
        }

        & > .maximize-button {
          &::before {
            content: '';
            width: $window-buttons-icon-size;
            height: $window-buttons-icon-size;
            position: absolute;
            left: (100% - $window-buttons-icon-size) / 2;
            top: (100% - $window-buttons-icon-size) / 2;
            //background-color: $window-buttons-color;
            border: 1px solid $window-buttons-color;
          }
        }

        & > .reduce-button {
          $offset-x: 2px;
          $offset-y: 2px;

          &::before,
          &::after {
            content: '';
            width: $window-buttons-icon-size;
            height: $window-buttons-icon-size;
            position: absolute;
            left: (100% - $window-buttons-icon-size) / 2;
            top: (100% - $window-buttons-icon-size) / 2;
            //background-color: $window-buttons-color;
            border: 1px solid $window-buttons-color;
          }

          &::before {
            transform: translate($offset-x, -$offset-y);
            border-bottom-color: transparent;
            border-left-color: transparent;
          }

          &::after {
            transform: translate(-$offset-x, $offset-y);
          }
        }

        & > .close-button {
          &::before,
          &::after {
            content: '';
            width: $window-buttons-icon-size;
            height: 1px;
            position: absolute;
            left: (100% - $window-buttons-icon-size) / 2;
            top: 50%;
            background-color: $window-buttons-color;
          }

          &::before {
            transform: rotate(45deg);
          }

          &::after {
            transform: rotate(-45deg);
          }

          &:hover {
            background-color: $window-buttons-close-background-color-hover;
          }
        }
      }
    }

    & > .content {
      top: $window-header-height;
      bottom: 0;
    }
  }

  &.animations-enabled {
    transition: left $window-animation-duration,
    right $window-animation-duration,
    top $window-animation-duration,
    bottom $window-animation-duration;
  }

  &:not(.enable-user-resize) {
    & > .resize-container {
      display: none;
    }
  }

}
